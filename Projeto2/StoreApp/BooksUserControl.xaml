<local:UserControlNotifiable x:Class="StoreApp.BooksUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StoreApp"
             mc:Ignorable="d" Height="481.818" Width="322.727" Background="#FF4DBCE9">
    <Grid>
        <Label Content="Books" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" FontSize="14"/>

        <ListBox Name="booksList" ItemsSource="{Binding BooksList}" HorizontalAlignment="Left" Height="200" Margin="10,44,0,0" VerticalAlignment="Top" Width="303"/>
        
        <Button Content="Add" HorizontalAlignment="Left" Margin="10,249,0,0" VerticalAlignment="Top" Width="75" Foreground="#FF19536A" Click="AddBook"/>
        <Button Content="Update" HorizontalAlignment="Left" Margin="90,249,0,0" VerticalAlignment="Top" Width="75" Foreground="#FF19536A"  Click="UpdateBook"/>
        <Button Content="Sell" HorizontalAlignment="Left" Margin="238,249,0,0" VerticalAlignment="Top" Width="75" Foreground="#FF19536A"  Click="SellBook"/>

    </Grid>
</local:UserControlNotifiable>
