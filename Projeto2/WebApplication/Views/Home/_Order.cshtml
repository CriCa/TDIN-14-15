@model WebApplication.Models.OrderModel

<ul id="menu">
    <li>
        @Ajax.ActionLink("C", "Create", new AjaxOptions {
       UpdateTargetId = "content-wrapper",
       InsertionMode = InsertionMode.Replace
   })
    </li>
    <li>
        @Ajax.ActionLink("T", "Track", new AjaxOptions {
       UpdateTargetId = "content-wrapper",
       InsertionMode = InsertionMode.Replace
   })
    </li>
    <li>
        @Ajax.ActionLink("L", "LogoutAction", new AjaxOptions {
       UpdateTargetId = "content-wrapper",
       InsertionMode = InsertionMode.Replace
   })
    </li>
</ul>
<div id="tab-title">
    <h3>TICKET</h3>
    <hr class="title-sep" />
</div>

<div id="create-form" class="clearfix">
    <div id="details-wrapper" class="clearfix">
        <input type="text" class="details" value="@Session["name"]" disabled />
        <input type="text" class="details last" value="@Session["email"]" disabled />
    </div>
    <hr />
    <div class="input-group">
        @Html.Label("BOOK")
        <span>@Html.TextBoxFor(x => x.book_title, new { @readonly = "readonly" })</span>
    </div>
    <div class="input-group">
        <div class="input-left">
            @Html.Label("QUANTITY")
            <span>@Html.TextBoxFor(x => x.quantity, new { @readonly = "readonly" })</span>
        </div>
        <div class="input-right">
            @Html.Label("PRICE $")
            <span>@Html.TextBoxFor(x => x.price, new { @readonly = "readonly" })</span>
        </div>
    </div>
    <div class="input-group">
        @Html.Label("ADDRESS")
        @Html.TextAreaFor(x => x.address, new { @readonly = "readonly" })
    </div>
    <div class="input-group">
        @Html.Label("CREATED ON")
        <span>@Html.TextBoxFor(x => x.date, new { @readonly = "readonly" })</span>
    </div>
    <div class="input-group">
        @Html.Label("STATE")
        <span>@Html.TextBoxFor(x => x.state_date, new { @readonly = "readonly" })</span>
    </div>
    
</div>
<input type="hidden" value="@Session["id"]" id="id-hidden" /> 

